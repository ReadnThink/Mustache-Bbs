{{>layouts/header}}

<!--form의 method=get으로 하면 주소 뒤에 ?keyword=<> 이런 형태로 넘어갑니다.-->
<form action="/hospitals/list" method="get">
    {{#keyword}}
        지역 : <input type="text" name="keyword" value="{{keyword}}"/>
        <input type="submit" />
    {{/keyword}}
    {{^keyword}}
        지역 : <input type="text" name="keyword" />
        <input type="submit" />
    {{/keyword}}
</form>
<div class="mb-3">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
        </thead>
        <tbody>
        {{#hospitals}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{hospitalName}}</td>
                <td>{{roadNameAddress}}</td>
            </tr>
        {{/hospitals}}
        </tbody>
    </table>
</div>
<ul class="pagination justify-content-center">
    {{#keyword}}
        <a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous </a>
        <a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next </a>
    {{/keyword}}
    {{^keyword}}
    <a class="page-link" href="?page={{previous}}"> Previous </a>
    <a class="page-link" href="?page={{next}}">Next </a>
    {{/keyword}}
</ul>
{{>layouts/footer}}